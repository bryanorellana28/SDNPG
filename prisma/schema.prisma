// This Prisma schema uses MySQL database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPERATOR
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     Role   @default(ADMIN)
}

model Credential {
  id          Int    @id @default(autoincrement())
  username    String
  password    String
  description String
}

model Site {
  id        Int    @id @default(autoincrement())
  nombre    String
  clave     String
  ubicacion String
  zona      String
  direccion String
}
